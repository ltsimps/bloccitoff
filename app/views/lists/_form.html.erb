
<div class="row">
  <div class="span6">
    <p>Guidelines for new Lists:</p>
    <ul class="list-group">
      <li class="list-group-item">Enter a name for you todo list</li>
      <li class="list-group-item">Blah blah blah</li>
      <li class="list-group-item">Blah blah blah</li>
      <li class="list-group-item">Blah blah blah</li>
    </ul>
  </div>
  <div class="span6">
    <%= form_for @list, html: { class: 'form-horizontal' } do |f| %>
      <div class="control-group">

        <%= f.label :name, class: 'control-label' %>
        <div class="controls">
            <%= f.hidden_field :user_id, value: @list.user_id %>
            <%= f.text_field :name %>

        </div>
      </div>
      
      <div class="control-group">
        <div class="controls">
          <%= f.submit "Create List", class: 'btn' %>
        </div>
      </div>
    <% end %>
  </div>
</div>